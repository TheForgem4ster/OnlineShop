<ul class="navbar-nav">

@if (User.IsInRole("user") ||User.IsInRole("admin") )
{

    <li class="nav-item">
        <a  class="nav-link" asp-area="Identity" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button asp-controller="Account" asp-action="Logout" type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else{

    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Registration</a>
    </li>
}
</ul>
